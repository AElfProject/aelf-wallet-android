<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:src="@mipmap/success" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/transaction_successful"
            android:textColor="#09162D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#09162D"
            android:textSize="12sp"
            tools:text="15 Mar 2018 09:12 AM" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/amount"
            android:textColor="#787F87"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:textColor="#09162D"
            android:textSize="18sp"
            tools:text="1.2345 ELF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/miner_fee"
            android:textColor="#787F87"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_miner_fee"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:textColor="#09162D"
            android:textSize="16sp"
            tools:text="1.2345 ELF" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/from"
            android:textColor="#787F87"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_copy_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/copy_grey"
                android:drawablePadding="10dp"
                android:textColor="#09162D"
                android:textSize="13sp"
                tools:text="无" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/to"
            android:textColor="#787F87"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_copy_to"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/copy_grey"
                android:drawablePadding="10dp"
                android:textColor="#09162D"
                android:textSize="13sp"
                tools:text="无" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/memo"
            android:textColor="#787F87"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:textColor="#09162D"
            android:textSize="13sp"
            tools:text="1.2345 ELF" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="87dp"
        android:background="#cecece" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/txid"
                    android:textColor="#787F87"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_copy_txid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableRight="@mipmap/copy_grey"
                        android:drawablePadding="10dp"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="#09162D"
                        android:textSize="13sp"
                        tools:text="1.2345 ELF" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/block"

                    android:textColor="#787F87"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:textColor="#09162D"
                    android:textSize="13sp"

                    tools:text="1.2345 ELF" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_marginRight="45dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_qr"
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/more_detail_explorer"
        android:textColor="#641EB0"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>