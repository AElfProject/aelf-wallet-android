<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/line_e0e0e0" />

    <RelativeLayout
        android:id="@+id/rel_touch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Touch ID"
            android:textColor="#787F87"
            android:textSize="@dimen/sp_12" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:checked="false"
            android:clickable="false"
            android:src="@mipmap/discover_selected"
            android:thumb="@drawable/shape_switch_thumb"
            app:track="@drawable/selector_switch" />

    </RelativeLayout>

    <include layout="@layout/line_e0e0e0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="19dp"
            android:paddingTop="22dp"
            android:paddingRight="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/introduction_label"
                android:textColor="#09162D"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/introduction_message"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/security_reminder"
                android:textColor="#09162D"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/security_reminder_message"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/disclaimer"
                android:textColor="#09162D"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/disclaimer_message"
                android:textColor="#787F87"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>