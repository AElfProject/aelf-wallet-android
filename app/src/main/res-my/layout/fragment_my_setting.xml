<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />

    <include layout="@layout/line_e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_mode"
            android:textColor="#09162D"
            android:textSize="@dimen/sp_15" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="@string/private_mode_detail"
                android:textColor="#787F87"
                android:textSize="@dimen/sp_12" />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="19dp"
                android:checked="false"
                android:src="@mipmap/discover_selected"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch" />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/line_e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/biometric_identification"
            android:textColor="#E83323"
            android:textSize="@dimen/sp_15" />


        <RelativeLayout
            android:id="@+id/rel_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/face_id_or_touch_id"
                android:textColor="#787F87"
                android:textSize="@dimen/sp_12" />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="19dp"
                android:checked="false"
                android:clickable="false"
                android:src="@mipmap/discover_selected"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/rel_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textColor="#09162D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="19dp"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="6dp"
            android:textColor="#787F87"
            android:textSize="@dimen/sp_12"
            tools:text="@string/by_chain" />

    </RelativeLayout>

    <include layout="@layout/line_e0e0e0" />

    <RelativeLayout
        android:id="@+id/rel_pricing_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pricing_currency"
            android:textColor="#09162D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_pricing_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="19dp"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="6dp"
            android:textColor="#787F87"
            android:textSize="@dimen/sp_12"
            tools:text="@string/by_chain" />

    </RelativeLayout>

    <include layout="@layout/line_e0e0e0" />

    <RelativeLayout
        android:id="@+id/rel_asset_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asset_display"
            android:textColor="#09162D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_asset_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="19dp"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="6dp"
            android:textColor="#787F87"
            android:textSize="@dimen/sp_12"
            tools:text="@string/by_chain" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e0e0e0" />

    <RelativeLayout
        android:id="@+id/rel_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_network"
            android:textColor="#09162D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_rel_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="19dp"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="6dp"
            android:textColor="#787F87"
            android:textSize="@dimen/sp_12"
            tools:text="@string/by_chain" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e0e0e0" />
</LinearLayout>