<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.legendwd.hyperpay.aelf.widget.webview.DWebView
            android:id="@+id/wv_bridge"
            android:layout_width="0dp"
            android:layout_height="0dp" />

            <ViewStub
                android:id="@+id/stub_transaction_success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inflatedId="@+id/stub_transaction_success"
                android:layout="@layout/layout_transaction_success" />

            <ViewStub
                android:id="@+id/stub_transaction_fail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inflatedId="@+id/stub_transaction_fail"
                android:layout="@layout/layout_transaction_fail" />

            <ViewStub
                android:id="@+id/stub_transaction_packing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inflatedId="@+id/stub_transaction_packing"
                android:layout="@layout/layout_transaction_packing" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>