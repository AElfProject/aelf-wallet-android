<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:src="@mipmap/warning" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#09162D"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_record_fail"
                android:gravity="center_horizontal"
                android:paddingLeft="50dp"
                android:paddingTop="13dp"
                android:paddingRight="50dp"
                android:paddingBottom="13dp">

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/sign_transaction_fail"
                    android:textColor="#FF4946"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/amount"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:textColor="#09162D"
                android:textSize="18sp"
                tools:text="1.2345 ELF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/miner_fee"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_miner_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:textColor="#09162D"
                android:textSize="18sp"
                tools:text="1.2345 ELF" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/from"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_copy_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@mipmap/copy_grey"
                    android:drawablePadding="10dp"
                    android:textColor="#09162D"
                    android:textSize="13sp"
                    tools:text="无" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/to"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_copy_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@mipmap/copy_grey"
                    android:drawablePadding="10dp"
                    android:textColor="#09162D"
                    android:textSize="13sp"
                    tools:text="无" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/memo"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:textColor="#09162D"
                android:textSize="13sp"
                tools:text="1.2345 ELF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/txid"
                android:textColor="#787F87"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_copy_txid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:drawableRight="@mipmap/copy_grey"
                    android:drawablePadding="10dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="#09162D"
                    android:textSize="13sp"
                    tools:text="1.2345 ELF" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_button_purple"
            android:gravity="center"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="@string/sign_transaction"
            android:textColor="@android:color/white"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>