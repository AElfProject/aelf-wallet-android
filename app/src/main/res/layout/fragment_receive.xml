<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            tools:src="@mipmap/logo_mark" />

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:textColor="@color/blue_202941"
            android:textSize="@dimen/sp_13"
            tools:text="1BvBMSEYstWetqTFn5AuJaNnhdjklVN21BvBMSEYstWetqTFn5A" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/gradient_r45_661fb8"
            android:gravity="center"
            android:text="@string/copy_address"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:text="@string/copy_address_notice"
            android:textColor="@color/gray_787F87"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@mipmap/elf_wallet_logo"
            android:textColor="@color/blue_09162d"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</ScrollView>