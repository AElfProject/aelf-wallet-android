<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/dialog_trans_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="19dp"
                android:text="@string/transgamedialog_text01"
                android:textColor="@color/blue_09162d"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_game_money_hint"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_trans_msg_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text="@string/amount"
                android:textColor="@color/blue_09162d"
                android:textSize="13sp" />

            <TextView
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tx_game_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_trans_msg_title"
                android:layout_toRightOf="@+id/tx_game_money_hint"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/blue_09162d"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tx_game_pay_from_hint"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_money_hint"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="@string/transgamedialog_text02"
                android:textColor="@color/gray_787F87"
                android:textSize="13sp" />

            <TextView
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tx_game_pay_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_money_hint"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tx_game_pay_from_hint"
                android:drawableRight="@mipmap/copy_grey"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/gray_787F87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tx_game_pay_to_hint"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_pay_from"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="@string/transgamedialog_text03"
                android:textColor="@color/gray_787F87"
                android:textSize="13sp" />

            <TextView
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tx_gamepay_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_pay_from"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tx_game_pay_to_hint"
                android:drawableRight="@mipmap/copy_grey"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/gray_787F87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tx_game_taxid_hint"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_pay_to_hint"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="@string/transgamedialog_text04"
                android:textColor="@color/gray_787F87"
                android:textSize="13sp" />

            <TextView
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tx_game_taxid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_gamepay_to"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tx_game_taxid_hint"
                android:drawableRight="@mipmap/copy_grey"
                android:paddingLeft="20dp"
                android:text=""
                android:textColor="@color/gray_787F87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tx_game_block_hint"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_taxid_hint"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:text="@string/transgamedialog_text05"
                android:textColor="@color/gray_787F87"
                android:textSize="13sp" />

            <TextView
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tx_game_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_game_taxid"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tx_game_block_hint"
                android:paddingLeft="25dp"
                android:text=""
                android:textColor="@color/gray_787F87"
                android:textSize="14sp" />



            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/linear_cb"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tx_game_block_hint"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/chb_white_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/transgamedialog_text06"
                    android:textColor="@color/gray_787F87"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

            </LinearLayout>





            <TextView
                android:id="@+id/tv_hint_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_cb"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:text="@string/transgamedialog_text07"
                android:textColor="@color/gray_787F87"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dialog_chain_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hint_tx"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/gradient_r45_661fb8"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>